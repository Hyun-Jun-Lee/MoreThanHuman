# Database Configuration
# SQLite (기본값, 별도 설치 불필요)
DATABASE_URL=sqlite:///./english_learning.db
# PostgreSQL (프로덕션 환경 사용 시)
# DATABASE_URL=postgresql://user:password@localhost:5432/english_learning

# External APIs
OPENROUTER_API_KEY=your_openrouter_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here

# Application Settings
DEBUG=true
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# LLM Provider Settings
# Choose provider: "openrouter" or "ollama"
LLM_PROVIDER=openrouter
# Ollama server URL (only needed if using Ollama)
OLLAMA_BASE_URL=http://localhost:11434

# OpenRouter Model Settings (used when LLM_PROVIDER=openrouter)
OPENROUTER_MODEL=google/gemini-2.0-flash-exp:free

# Ollama Model Settings (used when LLM_PROVIDER=ollama)
# Recommended: qwen2.5:7b (best quality), qwen2.5:3b (faster)
OLLAMA_MODEL=qwen2.5:7b

# Grammar Check Model Settings (optional - separate from conversation model)
# If not set, uses the main LLM settings above
# Recommended: Use cheaper/faster models for grammar checking
# GRAMMAR_MODEL_PROVIDER=openrouter
# GRAMMAR_OPENROUTER_MODEL=openai/gpt-4o-mini
# GRAMMAR_OLLAMA_MODEL=qwen2.5:3b

# Common LLM Settings
MAX_TOKENS=2000
TEMPERATURE=0.7

# Conversation Settings
MAX_HISTORY_TURNS=10
